<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/inicio">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.mensajesfirebaase.vistas.Recibidos"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_infoMensaje"
            app:destination="@id/infoMensaje" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.mensajesfirebaase.vistas.Enviados"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_gallery_to_infoMensaje"
            app:destination="@id/infoMensaje" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.mensajesfirebaase.vistas.AnadirMensaje"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" >
        <action
            android:id="@+id/action_nav_slideshow_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/inicio"
        android:name="com.example.mensajesfirebaase.vistas.Inicio"
        android:label="fragment_inicio"
        tools:layout="@layout/fragment_inicio" >
        <action
            android:id="@+id/action_inicio_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_inicio_to_registrarse"
            app:destination="@id/registrarse" />
    </fragment>
    <fragment
        android:id="@+id/cerrarSesion"
        android:name="com.example.mensajesfirebaase.vistas.CerrarSesion"
        android:label="fragment_cerrar_sesion"
        tools:layout="@layout/fragment_cerrar_sesion" >
        <action
            android:id="@+id/action_cerrarSesion_to_inicio"
            app:destination="@id/inicio" />
    </fragment>
    <fragment
        android:id="@+id/registrarse"
        android:name="com.example.mensajesfirebaase.vistas.Registrarse"
        android:label="Registrarse" >
        <action
            android:id="@+id/action_registrarse_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/infoMensaje"
        android:name="com.example.mensajesfirebaase.vistas.InfoMensaje"
        android:label="InfoMensaje" />
    <fragment
        android:id="@+id/modificarPerfil"
        android:name="com.example.mensajesfirebaase.vistas.ModificarPerfil"
        android:label="ModificarPerfil" />
</navigation>